<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://127.0.0.1:5432/rsoi</property>
        <property name="connection.username">andry</property>
        <property name="connection.password">andry</property>
        <property name="connection.pool_size">10</property>
        <property name="dialect">org.hibernate.dialect.PostgresPlusDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.database.logic.User" />
        <mapping class="com.database.logic.Session" />
        <mapping class="com.database.logic.Car" />
        <mapping class="com.database.logic.Mark" />

    </session-factory>
</hibernate-configuration>